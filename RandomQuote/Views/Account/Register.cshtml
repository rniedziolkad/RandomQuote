@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<div class="container mt-5">
<div class="row d-flex justify-content-center">
    <div class="col-md-6">
        <div class="card px-5 py-5" id="form1">
            <div class="form-data">
                <form method="post" asp-action="Register">
                    <div class="forms-inputs mb-4">
                        <label asp-for="Username"></label>
                        <input type="text" asp-for="Username"/>
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <div class="forms-inputs mb-4">
                        <label asp-for="Email"></label>
                        <input type="text" asp-for="Email"/>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="forms-inputs mb-4">
                        <label asp-for="Password"></label>
                        <input type="password" asp-for="Password"/>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="forms-inputs mb-4">
                        <label class="col-form-label" asp-for="ConfirmPassword"></label>
                        <input type="password" asp-for="ConfirmPassword"/>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="mb-3"><input type="submit" name="Register" value="Register" class="btn btn-dark w-100" style="height: 50px"/></div>
                </form>
            </div>
        </div>
    </div>
</div>
</div>
