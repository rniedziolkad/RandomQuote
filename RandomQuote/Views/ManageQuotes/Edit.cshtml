@model QuoteModel

@{
    ViewBag.Title = "Edit Quote";
}

<h1 class="display-4">@ViewBag.Title</h1>
<form method="post" asp-controller="ManageQuotes" asp-action="Edit">
    <label class="col-form-label" asp-for="Author"></label>
    <input type="text" asp-for="Author"/>
    <span asp-validation-for="Author" class="text-danger"></span>
    <br/>
    <label class="col-form-label" asp-for="Quote"></label>
    <textarea asp-for="Quote" rows="4" cols="40"></textarea>
    <span asp-validation-for="Quote" class="text-danger"></span>
    <br/>
    @Html.HiddenFor(model => model.QuoteId)
    <input type="submit" class="btn btn-primary m-2"/>
</form>