@model User
@{
    ViewData["Title"] = "Manage Quotes";
    
}

<div class="container mt-5">
<div class="row d-flex justify-content-center">
    <div class="col-md-6">
        <h1 class="display-4">@ViewBag.Title</h1>
        <div class="mb-3 card">
            <div class="card-header">
                <span style="line-height:40px; vertical-align: middle">You have @Model.MyQuotes.Count Quotes</span>
                <button type="button" class="btn btn-primary float-end" onclick="location.href='/ManageQuotes/Add'" style="height: 40px">Add Quote</button>
            </div>
            <div class="card-body">
                <table class="table table-striped table-hover w-100">
                    <thead>
                    <tr>
                        <th style="width: 120px">Author</th><th>Quote</th><th style="width:80px">Likes</th><th style="width:50px">Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    @{
                        foreach (var quote in Model.MyQuotes)
                        {
                            var author = quote.Author ?? Model.UserName;
                            <tr>
                                <td>@author</td> <td><i>@quote.Quote</i></td> <td>@quote.UserLikes.Count Likes</td>
                                <td><button type="button" class="btn btn-warning w-100" onclick="location.href='/ManageQuotes/Edit/@quote.QuoteId'">Edit</button></td>
                            </tr>
                        }
                    }
                    </tbody>
                </table>
            </div>
        </div>
        
        
        
    </div>
</div>
</div>
